<div class="gossip">
		<div>
			<ul>
				<li>
					<% if !@user.nil? && @user.id == @gossip.user_id %>
						<%= link_to "Supprimer mon ragot", gossip_path(@gossip), method: :delete %>
						<%= link_to "Editer mon ragot", edit_gossip_path(@gossip), method: :get %>
					<% end %>
				</li>
			</ul>
			<% if @gossip.user_id.nil? %>
				Author : <%= gossip.anonymous_gossiper %>
			<% else %>
				Author : <%= User.find(@gossip.user_id).username %>
			<% end %>
		</div>
		<div>
			Content : 
			<%= @gossip.content %>
			<br>
		</div>
	</div>